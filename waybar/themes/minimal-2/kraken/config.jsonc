// -*- mode: jsonc -*-

{
    "layer": "top",     // Waybar at top layer
    "position": "top",  // Waybar position (top|bottom|left|right)
    "spacing": 4,       // Gaps between modules (4px)
    "margin": "0 8 0 8",

    "modules-left": [
        "custom/apps",
        "hyprland/workspaces",
        "group/quicklinks",
        "group/spotify_controls",
        "custom/playerctl"
    ],

    "modules-center": [
      "group/clock_group",  
      "group/calendar_group"
    ],

    "modules-right": [
        "cpu#bars",
        "group/cpu_group",
        "group/memory_group",
        "group/temperature_group",
        "pulseaudio",
        "group/vpn_group",
        "group/network_group",
        "battery",
        "custom/settings",
        "custom/shutdown"
    ],

    "hyprland/workspaces" : {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{icon}",
        "format-icons": {
			"urgent": "",
			"active": "",
			"default": ""
        },
        "persistent-workspaces": {
            "*": 5
        }       
    },

    "hyprland/window": {
        "rewrite": {
            "(.*) - Firefox": "$1",
            "(.*) - Chromium": "$1",
            "(.*) - Brave Search": "$1",
            "(.*) - Outlook": "$1",
            "(.*) Microsoft Teams": "$1"
        },
        "separate-outputs": true
    },

    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "",
            "unlocked": ""
        }
    },

    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },

    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", ""],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        }
    },

    "mpris": {
        "player": "spotifyd",
        "format": "{} - {}",
        "max-length": 30,
        "hide-time": true,
        "tooltip": true
    },

    "custom/playerctl": {
        "exec": "playerctl -p spotifyd metadata --format '  {{ artist }} - {{ title }}'",
        "interval": 1,
        "tooltip": false
    },

    "custom/next_track": {
        "format": "󰒭",
        "on-click": "playerctl -p spotifyd next",
        "tooltip": false
    },

    "custom/prev_track": {
        "format": "󰒮",
        "on-click": "playerctl -p spotifyd next",
        "tooltip": false
    },

    "custom/play_pause": {
        "exec": "~/.dotfiles/scripts/spotify-controls/status.sh",
        "interval": 1,
        "format": "{}",
        "on-click": "playerctl -p spotifyd play-pause",
        "tooltip": false
    },

    // custom icons -----------------------------------------------------------

    "custom/cpu_logo": {
        "format": " ",
        "tooltip": false
    },

    "custom/memory_logo": {
        "format": "󰘚",
        "tooltip": false
    },

    "custom/temperature_logo": {
        "format": "",
        "tooltip": false
    },

    "custom/clock_logo": {
        "format": "",
        "tooltip": false
    },

    "custom/calendar_logo": {
        "format": "",
        "tooltip": false
    },

    "custom/network_logo" : {
        "format": "󰖟",
        "tooltip": false
    },

    // ------------------------------------------------------------------------

    "custom/spotify_logo": {
        "format": " ",
        "tooltip": false
    },

    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-icons": ["", "", "", "", ""] 
    },

    "clock": {
        "format": "{:%H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
        // "format-alt": "{:%Y-%m-%d}"
    },

    "custom/calendar": {
        "exec": "date +\"%a, $(date +%-d)$(date +%-d | sed 's/1$/st/;s/2$/nd/;s/3$/rd/;s/[04-9]$/th/') %b - %Y\"",
        "interval": 60,
        "tooltip": false
    },

    "cpu": {
        "interval": 1,
        "format": "{usage}%",
        "tooltip": true
    },

    "cpu#bars": {
        "interval": 1,
        "format": "{icon0}{icon1}{icon2}{icon3}{icon4}{icon5}{icon6}{icon7}{icon8}{icon9}{icon10}{icon11}{icon12}{icon13}",
        "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█"]
    },    

    "memory": {
        "format": "{used} / {total} ({percentage}%)"
    },

    "temperature": {
        "thermal-zone": 2,
        "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}°C {icon}",
        "format": "{temperatureC}°C"
    },

    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "",
        "performance": "",
        "balanced": "",
        "power-saver": ""
      }
    },

    "network": {
        "interval": 1,
        "format-wifi": "{signalStrength}% ",
        "format-ethernet": "{ipaddr}/{cidr} ",
        "tooltip-format": "{ifname} via {gwaddr} ",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "Disconnected ⚠",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },

    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        // {format_source} removed
        "format": "{volume}% {icon}  {format_source}", 
        "format-bluetooth": "{volume}% {icon}  {format_source}",
        "format-bluetooth-muted": " {icon}  {format_source}",
        "format-muted": "",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "󰓃 ",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
    },

    "custom/firefox": {
        "format": "",
        "on-click": "~/.dotfiles/scripts/firefox.sh",
        "tooltip": false
    },

    "custom/discord": {
        "format": "",
        "on-click": "~/.dotfiles/scripts/discord.sh",
        "tooltip": false
    },

    "custom/github": {
        "format": "",
        "on-click": "~/.dotfiles/scripts/github.sh",
        "tooltip": false
    },

    "custom/vscode": {
        "format": "󰨞",
        "on-click": "~/.dotfiles/scripts/vscode.sh",
        "tooltip": false
    },

    "custom/terminal": {
        "format": "  ",
        "on-click": "~/.dotfiles/scripts/terminal.sh",
        "tooltip": false
    },

    "custom/neovim": {
        "format": "  ",
        "on-click": "~/.dotfiles/scripts/neovim.sh",
        "tooltip": false
    },

    "custom/shutdown": {
        "format": "  ",
        "on-click": "~/.dotfiles/scripts/terminal.sh",
        "tooltip": false
    },

    "custom/spotify": {
        "format": " ",
        "on-click": "~/.dotfiles/scripts/spotify.sh",
        "tooltip": false
    },

    "custom/youtube": {
        "format": "󰗃",
        "on-click": "~/.dotfiles/scripts/youtube.sh",
        "tooltip": false
    },

    "custom/messenger": {
        "format": " 󰈎 ",
        "on-click": "~/.dotfiles/scripts/caprine.sh",
        "tooltip": false
    },

    "custom/ranger": {
        "format": " 󰉋 ",
        "on-click": "~/.dotfiles/scripts/ranger.sh",
        "tooltip": false
    },

    "custom/apps": {
        "format": "󰣇",
        "on-click": "~/.dotfiles/scripts/wofi.sh",
        "tooltip": false    
    },

    "custom/settings": {
        "format": "",
        "on-click": "~/.dotfiles/scripts/settings.sh",
        "tooltip": false
    },

    "custom/vpn": {
        "format": " {} ",
        "exec": "~/.dotfiles/scripts/nvpn-status.sh",
        "interval": 20,
        "tooltip": false
    },

    "custom/vpn_logo": {
        "format": "󰞀",
        "tooltip": false
    },

    "group/quicklinks": {
        "orientation": "horizontal",
        "modules": [
            "custom/ranger",
            "custom/firefox",
            "custom/youtube",
            "custom/spotify",
            "custom/discord",
            "custom/github",
            "custom/vscode"
        ]
    },

    "group/clock_group": {
        "orientation": "horizontal",
        "modules": [
            "custom/clock_logo",
            "clock"
        ]
    },

    "group/calendar_group": {
        "orientation": "horizontal",
        "modules": [
            "custom/calendar_logo",
            "custom/calendar"
        ]
    },

    "group/systemgroup": {
        "orientation": "horizontal",
        "modules": [
            //"disk",
            "custom/cpu_logo",
            "cpu",        
            "memory",
            "custom/temperature_logo",
            "temperature"
        ]
    },

    "group/cpu_group": {
        "orientation": "horizontal",
        "modules": [
            "custom/cpu_logo",
            "cpu"
        ]
    },

    "group/memory_group": {
        "orientation": "horizontal",
        "modules": [
            "custom/memory_logo",
            "memory"
        ]
    },

    "group/temperature_group": {
        "orientation": "horizontal",
        "modules": [
            "custom/temperature_logo",
            "temperature"
        ]
    },

    "group/spotify_controls": {
        "orientation": "horizontal",
        "modules": [
            "custom/spotify_logo",
            "custom/prev_track",
            "custom/play_pause",
            "custom/next_track"
        ]
    },

    "group/vpn_group": {
        "orientation": "horizontal",
        "modules": [
            "custom/vpn_logo",
            "custom/vpn"
        ]
    },

    "group/network_group": {
        "orientation": "horizontal",
        "modules": [
            "custom/network_logo",
            "network"
        ]
    }
}
