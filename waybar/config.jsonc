// -*- mode: jsonc -*-

{
    "layer": "top",     // Waybar at top layer
    "position": "top",  // Waybar position (top|bottom|left|right)
    "height": 30,       // Waybar height (to be removed for auto height)
    "spacing": 4,       // Gaps between modules (4px)

    "modules-left": [
        "custom/apps",
        "hyprland/workspaces",
        "group/quicklinks",
        "group/devapps",
        "hyprland/window"
    ],

    "modules-center": [
	    "clock"
    ],

    "modules-right": [
        "keyboard-state",
        "sway/language",
        "group/systemgroup",
        "group/audio-light-batt",
        "custom/shutdown"
    ],

    "hyprland/workspaces" : {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{}",
        "format-icons": {
			"urgent": "",
			"active": "",
			"default": ""
        },
        "persistent-workspaces": {
            "*": 3
        }       
    },

    "hyprland/window": {
        "rewrite": {
            "(.*) - Firefox": "$1",
            "(.*) - Chromium": "$1",
            "(.*) - Brave Search": "$1",
            "(.*) - Outlook": "$1",
            "(.*) Microsoft Teams": "$1"
        },
        "separate-outputs": true
    },

    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "",
            "unlocked": ""
        }
    },

    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },

    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", ""],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        }
    },

    "clock": {
        // "timezone": "America/New_York",
        "format": "  {:%H:%M    %a %d %h}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },

    "cpu": {
        "format": "{usage}% ",
        "tooltip": false
    },

    "memory": {
        "format": "{}% 󰘚"
    },

    "temperature": {
        "thermal-zone": 2,
        "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}°C {icon}",
        "format": "{temperatureC}°C "
    },

    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "",
        "performance": "",
        "balanced": "",
        "power-saver": ""
      }
    },

    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{signalStrength}% ",
        "format-ethernet": "{ipaddr}/{cidr} ",
        "tooltip-format": "{ifname} via {gwaddr} ",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "Disconnected ⚠",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },

    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        // {format_source} removed
        "format": "{volume}% {icon}", 
        "format-bluetooth": "{volume}% {icon}",
        "format-bluetooth-muted": " {icon}",
        "format-muted": "",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "󰓃 ",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
    },

    "custom/firefox": {
        "format": "  ",
        "on-click": "~/source/dotfiles/scripts/firefox.sh",
        "tooltip": false
    },

    "custom/discord": {
        "format": "   ",
        "on-click": "~/source/dotfiles/scripts/discord.sh",
        "tooltip": false
    },

    "custom/github": {
        "format": "  ",
        "on-click": "~/source/dotfiles/scripts/github.sh",
        "tooltip": false
    },

    "custom/vscode": {
        "format": " 󰨞 ",
        "on-click": "~/source/dotfiles/scripts/vscode.sh",
        "tooltip": false
    },

    "custom/terminal": {
        "format": "  ",
        "on-click": "~/source/dotfiles/scripts/terminal.sh",
        "tooltip": false
    },

    "custom/neovim": {
        "format": "  ",
        "on-click": "~/source/dotfiles/scripts/neovim.sh",
        "tooltip": false
    },

    "custom/shutdown": {
        "format": "  ",
        "on-click": "~/source/dotfiles/scripts/terminal.sh",
        "tooltip": false
    },

    "custom/spotify": {
        "format": "  ",
        "on-click": "~/source/dotfiles/scripts/spotify.sh",
        "tooltip": false
    },

    "custom/youtube": {
        "format": " 󰗃 ",
        "on-click": "~/source/dotfiles/scripts/youtube.sh",
        "tooltip": false
    },

    "custom/messenger": {
        "format": " 󰈎 ",
        "on-click": "~/source/dotfiles/scripts/caprine.sh",
        "tooltip": false
    },

    "custom/ranger": {
        "format": " 󰉋 ",
        "on-click": "~/source/dotfiles/scripts/ranger.sh",
        "tooltip": false
    },

    "custom/apps": {
        "format": "󰣇",
        "on-click": "~/source/dotfiles/scripts/wofi.sh",
        "tooltip": false    
    },

    "custom/vpn": {
        "states": {
            "disconnected": "",
            "connected": ""
        },
        "format": " {} ",
        "format-connected": " {} ",
        "format-disconnected": " {} ",
        "exec": "~/source/dotfiles/scripts/nvpn-status.sh",
        "interval": 20,
        "tooltip": false
    },

    "group/quicklinks": {
        "orientation": "horizontal",
        "modules": [
            "custom/ranger",
            "custom/firefox",
            "custom/spotify",
            "custom/youtube",
            "custom/discord",
            "custom/messenger"
        ]
    },

    "group/devapps": {
        "orientation": "horizontal",
        "modules": [
            "custom/github",
            "custom/vscode",
            "custom/neovim",
            "custom/terminal"
         ]
    },

    "group/audio-light-batt": {
        "orientation": "horizontal",
        "modules": [
            "pulseaudio",
            "network",
            "custom/vpn"
        ]
    },

    "group/systemgroup": {
        "orientation": "horizontal",
        "modules": [
            "cpu",
            "memory",
            "temperature"
        ]
    }
}
